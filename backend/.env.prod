# Production Environment Configuration
# Copy this file to .env and update with your production values

# Zerodha Kite Connect API Configuration
KITE_API_KEY=your_production_api_key
KITE_API_SECRET=your_production_api_secret

# Database Configuration
DATABASE_URL=postgresql://trading_user:secure_password@postgres:5432/trading_db

# Application Settings
ENV=production
LOG_LEVEL=WARNING
SECRET_KEY=your_super_secure_production_secret_key_change_this
TZ=Asia/Kolkata

# CORS Configuration - Update with your production domain
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=200
WS_CONNECTION_TIMEOUT=120

# Trading Configuration
MIN_CONFIDENCE_THRESHOLD=7
MAX_DAILY_SIGNALS=15
INSTITUTIONAL_THRESHOLD=3.0
SIGNAL_EXPIRY_MINUTES=10

# Risk Management
DEFAULT_RISK_REWARD_RATIO=2.5
MAX_POSITION_SIZE_PERCENT=5.0
STOP_LOSS_BUFFER_PERCENT=0.8

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=120
WS_RATE_LIMIT_PER_SECOND=20

# Monitoring and Alerts
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
ENABLE_PERFORMANCE_MONITORING=true

# Features
ENABLE_REAL_PCR=true
ENABLE_SIGNAL_PERSISTENCE=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_EMAIL_ALERTS=true

# Email Configuration
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USERNAME=your_production_email@yourdomain.com
SMTP_PASSWORD=your_secure_email_password
ALERT_EMAIL_RECIPIENTS=trading-alerts@yourdomain.com,admin@yourdomain.com

# Security
JWT_SECRET_KEY=your_jwt_secret_key_256_bits_long_minimum
JWT_EXPIRY_HOURS=8
REFRESH_TOKEN_EXPIRY_DAYS=30

# File Storage
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6

# Production Security Settings
DEBUG_SQL_QUERIES=false
ENABLE_CORS_BYPASS=false
MOCK_WEBSOCKET_DATA=false
SSL_REQUIRED=true

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://:secure_redis_password@redis:6379/0
REDIS_SESSION_TTL=3600

# Monitoring and Observability
PROMETHEUS_METRICS_ENABLED=true
METRICS_PORT=9090
ENABLE_DISTRIBUTED_TRACING=false

# Third-party Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Compliance and Audit
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
DATA_ENCRYPTION_ENABLED=true

# Performance Optimization
ENABLE_REQUEST_CACHING=true
CACHE_TTL_SECONDS=300
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6