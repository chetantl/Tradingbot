# Zerodha Kite Connect API Configuration
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here

# Database Configuration
DATABASE_URL=sqlite:///./trading_dashboard.db
# For PostgreSQL use: postgresql://username:password@localhost:5432/dbname

# Application Settings
ENV=development
LOG_LEVEL=INFO
SECRET_KEY=your_super_secret_key_change_this_in_production
TZ=Asia/Kolkata

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100
WS_CONNECTION_TIMEOUT=60

# Trading Configuration
MIN_CONFIDENCE_THRESHOLD=6
MAX_DAILY_SIGNALS=10
INSTITUTIONAL_THRESHOLD=2.5
SIGNAL_EXPIRY_MINUTES=15

# Risk Management
DEFAULT_RISK_REWARD_RATIO=2.0
MAX_POSITION_SIZE_PERCENT=10.0
STOP_LOSS_BUFFER_PERCENT=1.0

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
WS_RATE_LIMIT_PER_SECOND=10

# Monitoring and Alerts
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
ENABLE_PERFORMANCE_MONITORING=true

# Features
ENABLE_REAL_PCR=false
ENABLE_SIGNAL_PERSISTENCE=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_EMAIL_ALERTS=false

# Email Configuration (if ENABLE_EMAIL_ALERTS=true)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_RECIPIENTS=alerts@example.com

# Security
JWT_SECRET_KEY=your_jwt_secret_key_change_this
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=7

# File Storage
DATA_RETENTION_DAYS=30
LOG_RETENTION_DAYS=7
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24

# Development Settings
DEBUG_SQL_QUERIES=false
ENABLE_CORS_BYPASS=false
MOCK_WEBSOCKET_DATA=false