# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Application Settings
REACT_APP_ENV=development
REACT_APP_LOG_LEVEL=INFO
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_SOUND_ALERTS=false
REACT_APP_ENABLE_DARK_MODE=true

# UI Configuration
REACT_APP_THEME_COLOR=#00E676
REACT_APP_DEFAULT_SYMBOLS=RELIANCE,TCS,INFY,HDFCBANK
REACT_APP_MAX_CHART_POINTS=100
REACT_APP_REFRESH_INTERVAL=5000

# WebSocket Configuration
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=10
REACT_APP_WS_HEARTBEAT_INTERVAL=30000

# Trading Configuration
REACT_APP_DEFAULT_CONFIDENCE_THRESHOLD=6
REACT_APP_SIGNAL_EXPIRY_MINUTES=15
REACT_APP_MAX_VISIBLE_SIGNALS=20

# Map Configuration (for future features)
REACT_APP_MAPBOX_TOKEN=your_mapbox_token_here
REACT_APP_DEFAULT_LATITUDE=19.0760
REACT_APP_DEFAULT_LONGITUDE=72.8777

# Analytics and Tracking
REACT_APP_GA_TRACKING_ID=your_google_analytics_id
REACT_APP_HOTJAR_ID=your_hotjar_id

# Error Reporting
REACT_APP_SENTRY_DSN=your_sentry_dsn_here
REACT_APP_ENABLE_ERROR_REPORTING=false

# Development Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false
REACT_APP_ENABLE_DEV_TOOLS=true