# Production API Configuration
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_WS_URL=wss://api.yourdomain.com

# Application Settings
REACT_APP_ENV=production
REACT_APP_LOG_LEVEL=ERROR
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_SOUND_ALERTS=true
REACT_APP_ENABLE_DARK_MODE=true

# UI Configuration
REACT_APP_THEME_COLOR=#00E676
REACT_APP_DEFAULT_SYMBOLS=RELIANCE,TCS,INFY,HDFCBANK,SBIN
REACT_APP_MAX_CHART_POINTS=200
REACT_APP_REFRESH_INTERVAL=3000

# WebSocket Configuration
REACT_APP_WS_RECONNECT_INTERVAL=3000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=20
REACT_APP_WS_HEARTBEAT_INTERVAL=30000

# Trading Configuration
REACT_APP_DEFAULT_CONFIDENCE_THRESHOLD=7
REACT_APP_SIGNAL_EXPIRY_MINUTES=10
REACT_APP_MAX_VISIBLE_SIGNALS=50

# Analytics and Tracking
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX
REACT_APP_HOTJAR_ID=123456

# Error Reporting
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
REACT_APP_ENABLE_ERROR_REPORTING=true

# Security Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false
REACT_APP_ENABLE_DEV_TOOLS=false

# Performance Settings
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_CODE_SPLITTING=true
REACT_APP_CACHE_BUSTING=true

# Compliance
REACT_APP_COOKIE_CONSENT_ENABLED=true
REACT_APP_PRIVACY_POLICY_URL=https://yourdomain.com/privacy
REACT_APP_TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# Customer Support
REACT_APP_SUPPORT_EMAIL=support@yourdomain.com
REACT_APP_HELP_URL=https://help.yourdomain.com
REACT_APP_STATUS_URL=https://status.yourdomain.com