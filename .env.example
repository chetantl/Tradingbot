# Order Flow Trading Dashboard - Environment Configuration
# Copy this file to .env and update with your values

# Environment Settings
ENV=production
LOG_LEVEL=INFO
TZ=Asia/Kolkata

# Zerodha Kite Connect (DO NOT commit to version control)
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here

# WebSocket Configuration
WS_MAX_RETRIES=5
WS_INITIAL_BACKOFF=1
WS_CONNECTION_TIMEOUT=30

# Circuit Breaker Configuration
PCR_FAILURE_THRESHOLD=3
PCR_RECOVERY_TIMEOUT=300
API_FAILURE_THRESHOLD=5
API_RECOVERY_TIMEOUT=60

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30
ENABLE_METRICS=true
METRICS_PORT=9090

# Security Settings
ENABLE_CORS=false
ENABLE_XSRF_PROTECTION=false
MAX_UPLOAD_SIZE=50

# Data Retention (hours)
SIGNAL_RETENTION_HOURS=24
TICK_RETENTION_HOURS=1
LOG_RETENTION_DAYS=7

# Performance Settings
MAX_MONITORED_SYMBOLS=20
TICK_PROCESSING_BATCH_SIZE=50
QUEUE_MAX_SIZE=1000

# Feature Flags
ENABLE_REAL_PCR=true
ENABLE_SIGNAL_PERSISTENCE=false
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_ALERTS=false

# Database (optional - for signal persistence)
# DATABASE_URL=sqlite:///data/trading_signals.db
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10

# Monitoring and Alerting (optional)
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000
# ALERT_WEBHOOK_URL=https://hooks.slack.com/your-webhook